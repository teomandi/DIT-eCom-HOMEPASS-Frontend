<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailedOwnerFragment">

    <ProgressBar
        android:id="@+id/progressBarOwner"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/scrollView1"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_place_ownerpic"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/asianx" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_owner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_owner_surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_owner_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableview_infotable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:visibility="invisible">
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:padding="3dp"
                        android:text="@string/email_ask"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                    <TextView
                        android:id="@+id/textview_owner_email"
                        android:layout_column="2"
                        android:padding="3dp"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:padding="3dp"
                        android:text="@string/phone_ask"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                    <TextView
                        android:id="@+id/textview_owner_phone"
                        android:layout_column="2"
                        android:padding="3dp"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:padding="3dp"
                        android:text="@string/address_ask"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                    <TextView
                        android:id="@+id/textview_owner_address"
                        android:layout_column="2"
                        android:padding="3dp"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tableview_owner_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:visibility="invisible">
            </TableLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>