<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/backgrounnd2"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/compass" />

            <EditText
                android:id="@+id/edittext_username"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/light_round"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/username"
                android:inputType="text"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edittext_email"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/light_round"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="#000"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittext_firstname"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/light_round"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/edittext_lastname"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/light_round"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/surname"
                    android:inputType="text"
                    android:textColor="#000" />

            </LinearLayout>

            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/light_round"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="#000"

                />

            <EditText
                android:id="@+id/edittext_cnf_password"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/light_round"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edittext_cnf_phone"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/light_round"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/phone"
                android:inputType="phone"
                android:textColor="#000" />

<!--            <Button-->
<!--                android:id="@+id/button_roles"-->
<!--                android:layout_width="250dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:textColor="@color/colorWhite"-->
<!--                android:background="@drawable/default_button"-->
<!--                android:text="@string/select_role" />-->

            <CheckBox android:id="@+id/checkbox_behost"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/be_a_host"
                android:buttonTint="@color/colorWhite"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:paddingBottom="0dp"
                android:text="@string/select_profile_picture"
                android:textColor="#fff"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_profilepic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/asianx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingStart="10dp"
                android:text="@string/click_on_image_to_select_from_gallery"
                android:textColor="#fff"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/default_button"
                android:textColor="@color/colorWhite"

                android:text="@string/register" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingStart="10dp"
                    android:text="@string/already_registered"
                    android:textColor="#fff"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/textview_login"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingStart="5dp"
                    android:text="@string/login"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>